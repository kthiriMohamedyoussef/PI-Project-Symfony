{% extends 'Admin/Gestionespace/admin_base.html.twig' %}

{% block title %}Eventopia | Ajout d'Espace{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0f4c75;
            --accent: #00B4D8;
            --error: #FF6B6B;
            --radius: 8px;
            --shadow: 0 4px 12px rgba(15, 76, 117, 0.1);
        }
        .form-container {
            padding: 2rem;
        }
        .form-card {
            background: white;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 2.5rem;
        }
        .form-group label {
            font-weight: 600;
            color: var(--primary);
        }
        .form-control {
            width: 100%;
            padding: 0.85rem 1.25rem;
            border: 1px solid #d1d5db;
            border-radius: var(--radius);
            transition: border-color 0.3s ease;
        }
        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(0, 180, 216, 0.2);
        }
        .upload-container {
            height: 200px;
            border: 2px dashed #d1d5db;
            border-radius: var(--radius);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            position: relative;
            transition: border-color 0.3s ease;
        }
        .upload-container:hover {
            border-color: var(--accent);
        }
        .image-preview {
            max-width: 100%;
            max-height: 100%;
            display: none;
        }
        .upload-text {
            text-align: center;
            color: #6B7280;
            font-size: 0.9rem;
        }
        .btn-submit {
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.9rem 1.75rem;
            border-radius: var(--radius);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(15, 76, 117, 0.2);
        }
        .btn-return {
            background: white;
            color: var(--primary);
            border: 1px solid #d1d5db;
            padding: 0.9rem 1.75rem;
            border-radius: var(--radius);
            transition: background 0.3s ease, color 0.3s ease;
        }
        .btn-return:hover {
            background: #f9fafb;
            color: var(--accent);
        }
        .is-invalid {
            border-color: var(--error);
        }
        .invalid-feedback {
            color: var(--error);
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const imageInput = document.getElementById('espace_image');
            const preview = document.getElementById('imagePreview');
            const uploadWrapper = document.querySelector('.upload-container');

            uploadWrapper.addEventListener('click', function () {
                imageInput.click();
            });

            imageInput.addEventListener('change', function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        preview.style.display = 'block';
                        uploadWrapper.querySelector('.upload-text').style.display = 'none';
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.style.display = 'none';
                    uploadWrapper.querySelector('.upload-text').style.display = 'block';
                }
            });
        });
    </script>
{% endblock %}

{% block admin_content %}
    <div class="form-container">
        <div class="form-card">
            <h1 class="admin-title"><i class="fas fa-plus"></i> Créer un Espace</h1>
            <p class="admin-subtitle">Remplissez les détails pour ajouter un nouvel espace</p>

            {# Display flash messages #}
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
                <div class="two-col">
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom de l\'espace') }}
                        {{ form_widget(form.nom, {'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez le nom de l\'espace'
                        }}) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="invalid-feedback">{{ form_errors(form.nom) }}</div>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control is-invalid'}}) }}
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.localisation, 'Localisation') }}
                        {{ form_widget(form.localisation, {'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez la localisation'
                        }}) }}
                        {% if form.localisation.vars.errors|length > 0 %}
                            <div class="invalid-feedback">{{ form_errors(form.localisation) }}</div>
                            {{ form_widget(form.localisation, {'attr': {'class': 'form-control is-invalid'}}) }}
                        {% endif %}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.etat, 'État') }}
                    {{ form_widget(form.etat, {'attr': {
                        'class': 'form-control'
                    }}) }}
                    {% if form.etat.vars.errors|length > 0 %}
                        <div class="invalid-feedback">{{ form_errors(form.etat) }}</div>
                        {{ form_widget(form.etat, {'attr': {'class': 'form-control is-invalid'}}) }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form_label(form.typeEspace, 'Type d\'espace') }}
                    {{ form_widget(form.typeEspace, {'attr': {
                        'class': 'form-control'
                    }}) }}
                    {% if form.typeEspace.vars.errors|length > 0 %}
                        <div class="invalid-feedback">{{ form_errors(form.typeEspace) }}</div>
                        {{ form_widget(form.typeEspace, {'attr': {'class': 'form-control is-invalid'}}) }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form_label(form.image, 'Image de l\'espace') }}
                    <div class="upload-container">
                        {{ form_widget(form.image, {'attr': {
                            'class': 'image-input',
                            'id': 'espace_image',
                            'accept': 'image/*'
                        }}) }}
                        <img id="imagePreview" class="image-preview" alt="Aperçu de l'image" />
                        <div class="upload-text">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <span>Cliquez pour téléverser une image</span>
                        </div>
                    </div>
                    {% if form.image.vars.errors|length > 0 %}
                        <div class="invalid-feedback">{{ form_errors(form.image) }}</div>
                    {% endif %}
                </div>

                <div class="form-actions">
                    <a href="{{ path('admin_espace_list') }}" class="btn btn-return" role="button" tabindex="0" aria-label="Retour à la liste des espaces">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-submit" aria-label="Enregistrer l'espace">
                        <i class="fas fa-check"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}