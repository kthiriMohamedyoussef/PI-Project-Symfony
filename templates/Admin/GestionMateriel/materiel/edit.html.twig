{% extends 'Admin/GestionMateriel/admin_base.html.twig' %}

{% block title %}Eventopia | Edit Material{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #0f4c75;
            --secondary: #3282b8;
            --accent: #00B4D8;
            --success: #4FD69C;
            --danger: #FF6B6B;
            --light: #F8F9FF;
            --dark: #1E1E2C;
            --radius: 8px;
            --radius-lg: 12px;
            --shadow: 0 4px 12px rgba(15, 76, 117, 0.1);
            --sidebar-width: 280px;
        }

        /* Layout */
        html, body, .admin-wrapper, .admin-main, .form-container, .form-card {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-y: auto;
        }

        .admin-main {
            margin-left: var(--sidebar-width);
            background: #f5f9fc;
            display: flex;
            min-height: 100vh;
        }

        .form-container {
            flex: 1;
            padding: 1.5rem;
            display: flex;
        }

        .form-card {
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow);
            padding: 2rem;
            width: 100%;
            display: flex;
            flex-direction: column;
            border-top: 4px solid var(--primary);
        }

        /* Header */
        .admin-header {
            margin-bottom: 1.5rem;
            position: relative;
            padding-bottom: 1rem;
        }

        .admin-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(to right, var(--primary), var(--accent));
            border-radius: 2px;
        }

        .admin-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0 0 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .admin-title i {
            color: var(--accent);
            font-size: 1.8rem;
        }

        .admin-subtitle {
            color: #6B7280;
            font-size: 1rem;
            margin: 0;
            font-weight: 400;
        }

        /* Form Elements */
        .form-group {
            margin-bottom: 1.2rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--primary);
            font-size: 0.95rem;
        }

        .form-control {
            width: 100%;
            padding: 0.85rem 1rem;
            font-size: 1rem;
            border: 1px solid #d1d5db;
            border-radius: var(--radius);
            background-color: #f9fafb;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(0, 180, 216, 0.2);
        }

        /* Grid Layout */
        .two-col {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.2rem;
            margin-bottom: 1.2rem;
        }

        /* Price Field */
        .price-container {
            display: flex;
            align-items: center;
        }

        .price-currency {
            padding: 0.85rem 1rem;
            background: #f1f5f9;
            border: 1px solid #d1d5db;
            border-left: none;
            border-radius: 0 var(--radius) var(--radius) 0;
            color: var(--primary);
        }

        /* Image Upload */
        .upload-container {
            position: relative;
            margin-bottom: 1rem;
        }

        .image-upload-wrapper {
            height: 150px;
            border: 2px dashed #d1d5db;
            border-radius: var(--radius);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            cursor: pointer;
            background: #f9fafb;
            transition: all 0.3s ease;
        }

        .image-upload-wrapper:hover {
            border-color: var(--accent);
            background: rgba(0, 180, 216, 0.1);
        }

        .upload-icon {
            font-size: 1.8rem;
            color: var(--accent);
            margin-bottom: 0.5rem;
        }

        .upload-text {
            font-size: 0.9rem;
            margin: 0.25rem 0;
            color: var(--dark);
        }

        .upload-hint {
            font-size: 0.8rem;
            color: #6B7280;
        }

        .image-input {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
            top: 0;
            left: 0;
        }

        .image-preview {
            max-width: 100%;
            max-height: 150px;
            display: block;
            margin: 0.5rem auto;
            border-radius: var(--radius);
        }

        .btn-add-image {
            margin-top: 0.5rem;
            background: var(--secondary);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: var(--radius);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-add-image:hover {
            background: var(--primary);
        }

        /* Buttons */
        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 0.5rem;
            padding-top: 0.75rem;
            border-top: 1px solid #e5e7eb;
        }

        .btn {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            border-radius: var(--radius);
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-return {
            background: white;
            color: var(--primary);
            border: 1px solid #d1d5db;
        }

        .btn-return:hover {
            background: #f9fafb;
            border-color: var(--accent);
        }

        .btn-update {
            background: var(--success);
            color: white;
            border: none;
        }

        .btn-update:hover {
            background: #3da57a;
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .btn-delete {
            background: var(--danger);
            color: white;
            border: none;
        }

        .btn-delete:hover {
            background: #e05555;
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
        }
        .is-invalid {
            border-color: var(--danger) !important;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
        }
        
        .invalid-feedback {
            color: var(--danger);
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Image upload handling
            const imageInput = document.getElementById('{{ form.imageFile.vars.id }}');
            const uploadWrapper = document.getElementById('uploadWrapper');
            const preview = document.getElementById('imagePreview');
            const addImageBtn = document.getElementById('addImageButton');
            
            if (imageInput && uploadWrapper && preview) {
                // Initialize visibility
                if (preview.src && preview.style.display !== 'none') {
                    uploadWrapper.style.display = 'none';
                } else {
                    uploadWrapper.style.display = 'flex';
                }

                // Handle file selection
                imageInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            preview.src = e.target.result;
                            preview.style.display = 'block';
                            uploadWrapper.style.display = 'none';
                        }
                        reader.readAsDataURL(file);
                    }
                });
                
                // Add image button functionality
                if (addImageBtn) {
                    addImageBtn.addEventListener('click', function() {
                        imageInput.click();
                    });
                }
                
                // Click on upload wrapper
                uploadWrapper.addEventListener('click', function() {
                    imageInput.click();
                });
            }

            // Form submission handling
            const form = document.getElementById('edit-material-form');
            if (form) {
                form.addEventListener('submit', function() {
                    console.log('Form is submitting...');
                });
            }
        });

        function confirmDelete() {
            if (confirm('Are you sure you want to delete this material? This action cannot be undone.')) {
                document.getElementById('delete-form').submit();
            }
        }
    </script>
{% endblock %}

{% block admin_content %}
    <div class="form-container">
        <div class="form-card">
            <div class="admin-header">
                <h1 class="admin-title"><i class="fas fa-edit"></i> Edit Material</h1>
                <p class="admin-subtitle">Update the details of the selected material</p>
            </div>
            
            {{ form_start(form, {'attr': {'id': 'edit-material-form', 'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}
    <div class="two-col">
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {
                'attr': {
                    'class': 'form-control' ~ (form.nom.vars.errors|length ? ' is-invalid' : ''),
                    
                }
            }) }}
            {% if form.nom.vars.errors|length %}
                <div class="invalid-feedback d-block">
                    {{ form.nom.vars.errors[0].message }}
                </div>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.prix, 'Price (TND)') }}
            <div class="price-container">
                {{ form_widget(form.prix, {
                    'attr': {
                    'class': 'form-control' ~ (form.prix.vars.errors|length ? ' is-invalid' : ''),
                    'placeholder': 'Enter the price',
                    'style': 'border-top-right-radius: 0; border-bottom-right-radius: 0;'
                    }
                }) }}
                <span class="price-currency">TND</span>
            </div>
            {% if form.prix.vars.errors|length %}
                <div class="invalid-feedback d-block">
                    {{ form.prix.vars.errors[0].message }}
                </div>
            {% endif %}
        </div>
    </div>
    
    <div class="two-col">
        <div class="form-group">
            {{ form_label(form.etat, 'Status') }}
            {{ form_widget(form.etat, {
                'attr': {
                    'class': 'form-control' ~ (form.etat.vars.errors|length ? ' is-invalid' : ''),
                    'placeholder': 'Select status'
                }
            }) }}
            {% if form.etat.vars.errors|length %}
                <div class="invalid-feedback d-block">
                    {{ form.etat.vars.errors[0].message }}
                </div>
            {% endif %}
        </div>
        
        <div class="form-group">
            {{ form_label(form.typeMaterielId, 'Material Type') }}
            {{ form_widget(form.typeMaterielId, {
                'attr': {
                    'class': 'form-control' ~ (form.typeMaterielId.vars.errors|length ? ' is-invalid' : ''),
                    'placeholder': 'Select material type'
                }
            }) }}
            {% if form.typeMaterielId.vars.errors|length %}
                <div class="invalid-feedback d-block">
                    {{ form.typeMaterielId.vars.errors[0].message }}
                </div>
            {% endif %}
        </div>
    </div>
    
    <div class="form-group">
        <label for="materiel_imageFile">Material Image</label>
        <div class="upload-container">
            <div class="image-upload-wrapper" id="uploadWrapper">
                <i class="fas fa-cloud-upload-alt upload-icon"></i>
                <div class="upload-text">Click to upload a new image</div>
                <div class="upload-hint">Accepted formats: JPG, PNG (max 5MB)</div>
            </div>
            {{ form_widget(form.imageFile, {
                'attr': {
                    'class': 'image-input' ~ (form.imageFile.vars.errors|length ? ' is-invalid' : ''),
                    'accept': 'image/*',
                    'id': 'materiel_imageFile'
                }
            }) }}
            {% if form.imageFile.vars.errors|length %}
                <div class="invalid-feedback d-block">
                    {{ form.imageFile.vars.errors[0].message }}
                </div>
            {% endif %}
            <img id="imagePreview" class="image-preview" alt="Preview" 
                {% if materiel.imagePath %}src="{{ asset(materiel.imagePath) }}" style="display:block;"{% else %}style="display:none;"{% endif %}>
            <button type="button" id="addImageButton" class="btn btn-add-image">
                <i class="fas fa-plus"></i> Change Image
            </button>
        </div>
    </div>
                <div class="form-actions">
                    <a href="{{ path('admin_gestionmateriel_index') }}" class="btn btn-return">
                        <i class="fas fa-arrow-left"></i> Back to list
                    </a>
                    <div class="action-buttons">
                        <button type="button" class="btn btn-delete" onclick="confirmDelete()">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <button type="submit" class="btn btn-update">
                            <i class="fas fa-save"></i> Update Material
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    {# Separate delete form #}
    <form id="delete-form" method="post" action="{{ path('admin_gestionmateriel_delete', {'id': materiel.id}) }}" style="display: none;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ materiel.id) }}">
    </form>
{% endblock %}