{% extends 'Admin/GestionMateriel/admin_base.html.twig' %}

{% block title %}Eventopia | Material Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Your existing styles remain exactly the same */
        :root {
            --primary: #0f4c75;
            --primary-light: #3282b8;
            --primary-lighter: #bbe1fa;
            --light: #f8f9fc;
            --border: #e0e3e8;
            --text: #2d3748;
            --text-light: #718096;
            --sidebar-width: 280px;
            --success: #4fd69c;
            --warning: #ffc107;
            --danger: #ff6b6b;
        }

        .detail-image-container {
            margin-top: 2rem;
            text-align: center;
        }
        
        .detail-image {
            max-width: 100%;
            max-height: 400px;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(15, 76, 117, 0.1);
            border: 3px solid white;
            object-fit: contain;
        }
        
        .no-image {
            padding: 2rem;
            background-color: var(--light);
            border-radius: 12px;
            text-align: center;
            color: var(--text-light);
            border: 2px dashed var(--border);
        }

        .admin-content-container {
            margin-left: 100px;
            width: calc(100% - 100px);
            padding: 1.5rem 1.5rem 1.5rem 1.2rem;
            background: var(--light);
            min-height: 100vh;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--primary-lighter);
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .page-title i {
            color: var(--primary-light);
        }

        .detail-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(15, 76, 117, 0.1);
            padding: 2.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            border-top: 4px solid var(--primary);
        }

        .detail-table {
            width: 100%;
            border-collapse: collapse;
        }

        .detail-table th, .detail-table td {
            padding: 0.75rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .badge {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            color: white;
            font-weight: 600;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            text-decoration: none;
            cursor: pointer;
            font-weight: 500;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background: var(--primary-light);
            box-shadow: 0 4px 8px rgba(15, 76, 117, 0.2);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: white;
            color: var(--primary);
            border: 1px solid #d1d5db;
        }

        .btn-secondary:hover {
            background: #f9fafb;
            border-color: var(--primary-light);
            color: var(--primary-light);
            box-shadow: 0 4px 8px rgba(15, 76, 117, 0.2);
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block admin_content %}
    <div class="admin-content-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-info-circle"></i> Material Details
            </h1>
            <a href="{{ path('admin_gestionmateriel_index') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>

        <div class="detail-card">
            <h1 style="color: var(--primary); margin-bottom: 2rem;">{{ materiel.nom }}</h1>

            <table class="detail-table">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ materiel.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ materiel.nom }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ materiel.prix }} TND</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            <span class="badge" style="background: {{ materiel.etat == 'DISPONIBLE' ? 'var(--success)' : 'var(--danger)' }};">
                                {{ materiel.etat }}
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ typeMaterielName }}</td>
                    </tr>
                </tbody>
            </table>

            <!-- Fixed Image Display Section - Only this section is modified -->
            <div class="detail-image-container">
                <h4 style="color: var(--primary); margin-bottom: 1rem;">Material Image</h4>
                {% if materiel.imagePath %}
                     <img src="{{ asset(materiel.imagePath) }}" 
        class="material-image-thumb"
             alt="{{ materiel.nom }}"
             style="max-width: 100px; max-height: 100px;"
            loading="lazy"
             onerror="this.onerror=null;this.src='{{ asset('build/images/default-material.jpg') }}'">
    {% else %}
       <div class="no-image-thumb">
            <i class="fas fa-image"></i>
        </div>
    {% endif %}
            </div>

            <div class="action-buttons">
                <a href="{{ path('admin_gestionmateriel_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
                <a href="{{ path('admin_gestionmateriel_edit', {'id': materiel.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                {{ include('Admin/GestionMateriel/materiel/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}