        }

        /* Map and building icons */
        .fa-map-marker-alt, .fa-building {
            color: #6e8efb;
        }

        /* Pagination */
        .pagination {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        
        .pagination a {
            padding: 0.5rem 1rem;
            background: #f0f0f0;
            border-radius: 4px;
            text-decoration: none;
            color: black;
            transition: all 0.3s ease;
        }
        
        .pagination a:hover {
            background: #6e8efb;
            color: white;
        }
        
        .pagination .current {
            padding: 0.5rem 1rem;
            background: #6e8efb;
            color: white;
            border-radius: 4px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // QR Code Generation
            const qrCodeButtons = document.querySelectorAll('.qr-code-btn');

            qrCodeButtons.forEach(button => {
                button.addEventListener('click', async () => {
                    const espaceId = button.dataset.id;
                    const qrCodeContainer = button.closest('.card-body').querySelector('.qr-code-container');
                    const qrCodeImage = qrCodeContainer.querySelector('.qr-code-image');

                    // Toggle visibility
                    if (qrCodeContainer.style.display === 'block') {
                        qrCodeContainer.style.display = 'none';
                        return;
                    }

                    try {
                        // Show loading state
                        button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Generating...';
                        button.disabled = true;
                        
                        // Use absolute URL to ensure the path is correct
                        const response = await fetch(`/espace/${espaceId}/qrcode`, {
                            headers: {
                                'Accept': 'application/json'
                            }
                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }

                        const data = await response.json();
                        
                        if (!data.success) {
                            throw new Error(data.message);
                        }

                        qrCodeImage.src = data.qr_code;
                        qrCodeContainer.style.display = 'block';
                        
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Failed to generate QR code: ' + error.message);
                    } finally {
                        // Reset button state
                        button.innerHTML = '<i class="fas fa-qrcode me-1"></i> QR Code';
                        button.disabled = false;
                    }
                });
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const searchClear = document.getElementById('searchClear');
            const espaceCards = document.querySelectorAll('.espace-card');
            const noResults = document.getElementById('noResults');

            // Toggle clear button visibility
            searchInput.addEventListener('input', function() {
                searchClear.style.display = this.value.trim() ? 'flex' : 'none';
                filterAndSearch();
            });
            
            // Clear search functionality
            searchClear.addEventListener('click', function() {
                searchInput.value = '';
                searchClear.style.display = 'none';
                filterAndSearch();
                searchInput.focus();
            });

            // Filter by etat functionality
            const filterBtns = document.querySelectorAll('.filter-btn');
            filterBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    // Remove 'active' class from all buttons
                    filterBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    filterAndSearch();
                });
            });

            // Combined filter and search function
            function filterAndSearch() {
                const searchTerm = searchInput.value.trim().toLowerCase();
                const activeFilter = document.querySelector('.filter-btn.active').dataset.filter;
                let hasResults = false;

                espaceCards.forEach(card => {
                    const cardName = card.getAttribute('data-name');
                    const etat = card.getAttribute('data-etat');
                    
                    const matchesSearch = searchTerm === '' || cardName.includes(searchTerm);
                    const matchesFilter = activeFilter === 'all' || etat === activeFilter;
                    
                    if (matchesSearch && matchesFilter) {
                        card.style.display = 'flex';
                        hasResults = true;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Show/hide "No results" message
                noResults.style.display = hasResults ? 'none' : 'block';
            }
        });
    </script>
{% endblock %}