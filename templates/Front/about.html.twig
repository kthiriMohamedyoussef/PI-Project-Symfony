<script>
	// total events count
document.addEventListener('DOMContentLoaded', function () {
fetch('/about/event-count').then(response => response.json()).then(data => {
document.getElementById('eventCount').textContent = data.eventCount;
}).catch(error => {
console.error('Error fetching event count:', error);
});
});
// total espaces count
document.addEventListener('DOMContentLoaded', function () {
fetch('/about/space-count').then(response => response.json()).then(data => {
document.getElementById('spaceCount').textContent = data.spaceCount;
}).catch(error => {
console.error('Error fetching space count:', error);
});
});
// total users count
document.addEventListener('DOMContentLoaded', function () {
fetch('/about/user-count').then(response => response.json()).then(data => {
document.getElementById('userCount').textContent = data.userCount;
}).catch(error => {
console.error('Error fetching users count:', error);
});
});
// total materiel count
document.addEventListener('DOMContentLoaded', function () {
fetch('/about/material-count').then(response => response.json()).then(data => {
document.getElementById('materialCount').textContent = data.materialCount;
}).catch(error => {
console.error('Error fetching materials count:', error);
});
});
// percentage of positive feedback
document.addEventListener('DOMContentLoaded', function () {
fetch('{{ path('api_positive_feedback_percentage') }}').then(response => response.json()).then(data => {
const percentage = data.percentage || 0;

// Update counter value with percentage sign
document.querySelector('.counter-value').innerText = percentage + '%';

// Update progress bar width
document.querySelector('.progress-bar').style.width = percentage + '%';
document.querySelector('.progress-bar').setAttribute('aria-valuenow', percentage);
}).catch(error => {
console.error('Error fetching positive feedback percentage:', error);
});
});
